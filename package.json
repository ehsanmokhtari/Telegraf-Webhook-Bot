{
	"name": "telegraf-webhook-bot",
	"version": "3.0.0",
	"description": "A production-ready Node.js Telegram Bot with Telegraf, webhook support, and Vercel deployment",
	"main": "api/index.ts",
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=8.0.0"
	},
	"scripts": {
		"dev": "dotenv -- nodemon -e ts -x ts-node src/lib/telegram.ts",
		"start": "node dist/api/index.js",
		"build": "tsc",
		"build:watch": "tsc --watch",
		"clean": "rimraf dist",
		"prebuild": "npm run clean",
		"lint": "eslint src/**/*.ts api/**/*.ts --ext .ts",
		"lint:fix": "eslint src/**/*.ts api/**/*.ts --ext .ts --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"type-check": "tsc --noEmit",
		"vercel-build": "npm run build",
		"postinstall": "npm run build"
	},
	"keywords": [
		"telegram",
		"bot",
		"telegraf",
		"webhook",
		"vercel",
		"serverless",
		"typescript",
		"nodejs",
		"express",
		"postgresql",
		"sequelize",
		"session-management",
		"scenes",
		"middleware"
	],
	"author": {
		"name": "Ehsan Mokhtari",
		"email": "Ehsan69Mokhtari@gmail.com",
		"url": "https://github.com/ehsanmokhtari"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ehsanmokhtari/telegraf-webhook-bot.git"
	},
	"bugs": {
		"url": "https://github.com/ehsanmokhtari/telegraf-webhook-bot/issues"
	},
	"homepage": "https://github.com/ehsanmokhtari/telegraf-webhook-bot#readme",
	"dependencies": {
		"express": "^4.21.1",
		"pg": "^8.13.1",
		"pg-hstore": "^2.3.4",
		"sequelize": "^6.37.5",
		"telegraf": "^4.16.3",
		"helmet": "^7.1.0",
		"cors": "^2.8.5",
		"compression": "^1.7.4",
		"winston": "^3.11.0",
		"joi": "^17.11.0"
	},
	"devDependencies": {
		"@types/express": "^5.0.0",
		"@types/cors": "^2.8.17",
		"@types/compression": "^1.7.5",
		"@types/node": "^20.10.0",
		"@types/jest": "^29.5.8",
		"@typescript-eslint/eslint-plugin": "^6.13.0",
		"@typescript-eslint/parser": "^6.13.0",
		"dotenv-cli": "^7.4.2",
		"eslint": "^8.54.0",
		"jest": "^29.7.0",
		"nodemon": "^3.1.7",
		"rimraf": "^5.0.5",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testMatch": ["**/__tests__/**/*.test.ts"],
		"collectCoverageFrom": [
			"src/**/*.ts",
			"api/**/*.ts",
			"!**/*.d.ts",
			"!**/node_modules/**"
		]
	}
}
